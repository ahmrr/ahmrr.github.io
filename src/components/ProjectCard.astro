---
import ArrowLink from "@assets/icons/arrow-link.astro";
import ConstructionLine from "./ConstructionLine.astro";

const projectTitle = Astro.props.projectTitle;
const projectDescription = Astro.props.projectDescription;
const projectLink = Astro.props.projectLink;
const image = Astro.props.image;
---

<article
    style={{
        backgroundImage:
            "radial-gradient(circle, #6c6c6c1d 0%, transparent 100%)",
    }}
    class="relative border border-zinc-300 bg-zinc-100 dark:border-zinc-700 dark:bg-zinc-800 bg-opacity-40 p-8 rounded-lg flex flex-col-reverse md:flex-row justify-between mb-7 shadow-xl"
>
    <ConstructionLine />
    <div>
        <!-- DEBUG: Change when projects are updated -->
        <a
            class="text-xl inline-flex items-center gap-2 hover:opacity-60 transition mb-2"
            target="_blank"
            href={projectLink}
            onclick="event.preventDefault()"
        >
            <h3 class="text-xl font-semibold">
                {projectTitle}
                <span
                    class="text-zinc-600 dark:text-zinc-400 inline-flex items-center ml-0.5 align-middle"
                >
                    <ArrowLink size="w-4 h-4" />
                </span>
            </h3>
        </a>
        <p
            class="text-zinc-600 dark:text-zinc-400 text-sm text-pretty pr-2 mb-4"
        >
            {projectDescription}
        </p>
        <div class="flex items-center gap-3 pr-8">
            <slot />
        </div>
    </div>
    <!-- <img
        class="w-full h-auto object-contain bg-white border border-zinc-300 dark:border-zinc-700 mb-5 shadow-xl rounded-md md:w-52 md:mb-0"
        src={image}
        alt={`${projectTitle} image`}
    /> -->
</article>
