---
const name = Astro.props.name;
---

<div class="flex flex-col items-center justify-center">
    <div
        class="inline-flex flex-col items-center justify-center p-3 border rounded-md border-zinc-300 bg-zinc-100 dark:border-zinc-700 dark:bg-zinc-800"
    >
        <slot />
    </div>
    <span class="text-zinc-600 dark:text-zinc-400 text-sm mt-1 font-sans"
        >{name}</span
    >
</div>
