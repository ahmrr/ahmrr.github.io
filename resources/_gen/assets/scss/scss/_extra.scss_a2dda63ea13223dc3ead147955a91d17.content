.p-0{padding:0}.m-0{margin:0}.flex{display:flex}.flex-center{display:flex;justify-content:center;align-items:center}h1{font-size:x-large}h2{font-size:large}.inline-svg{display:inline-block;height:20px;width:20px;color:#f5f5f5}img.profile{width:150px;height:150px;display:inline;float:right;margin:16px;border-radius:50%}div.media-panel{display:flex;justify-content:center;align-items:center;gap:10px;user-select:none}button.media-button,a.media-button{display:flex;width:fit-content;height:fit-content;padding:8px;border-radius:50%;background:#1e1e2e;cursor:pointer;transition:ease .2s}button.media-button:hover,a.media-button:hover{transform:rotate(360deg);border-radius:50%}div.highlight{filter:drop-shadow(0 0 5px #282c34);-webkit-filter:drop-shadow(0 0 5px #282c34)}footer{width:calc(100% - 32px);display:flex;margin:0 0 -32px;justify-content:center;align-items:center;flex-direction:column}